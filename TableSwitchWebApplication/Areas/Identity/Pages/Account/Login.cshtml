@page
@using Microsoft.JSInterop;
@model TableSwitchWebApplication.Areas.Identity.Pages.Account.LoginModel
@inject IJSRuntime JSRuntime

<div class="login-form">
    <h2><b>Login</b></h2>
    <form id="account" method="post" asp-page-handler="login">
        <div class="form-group">
            <input type="text" class="form-control" id="username" asp-for="Input.Username" placeholder="Username">
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="password" asp-for="Input.Password" placeholder="Password">
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn">Submit</button>
    </form>
</div>
